# VS Code Server Docker Environment Configuration
# Copy this file to .env and modify the values as needed

# ============================================================================
# Basic Configuration
# ============================================================================

# Host port mapping (default: 8585)
HOST_PORT=8585

# Host interface to bind to (default: 0.0.0.0)
# For all services: VS Code Server, OpenCode, OpenClaw
HOST=0.0.0.0

# Container port (default: 8585)
CONTAINER_PORT=8585

# Connection token for authentication (CHANGE THIS IN PRODUCTION)
TOKEN=sometoken

# ============================================================================
# CDN Configuration Options
# ============================================================================

# CDN Proxy Mode (requires nginx reverse proxy configuration)
# Set to 'true' to use CDN proxy instead of direct CDN access
# Recommended: false (default)
# Use 'true' for production with nginx reverse proxy
USE_CDN_PROXY=false

# CDN Proxy Host (required when USE_CDN_PROXY=true)
# Set to your reverse proxy domain name or IP address
# VS Code Server will use: https://CDN_PROXY_HOST/proxy-unpkg and https://CDN_PROXY_HOST/proxy-cdn
# Example: CDN_PROXY_HOST=my-vscode-server.domain.com
CDN_PROXY_HOST=

# ============================================================================
# User/Group Configuration (Optional)
# ============================================================================

# User ID for volume permissions (default: 1000)
# Uncomment to match your host user UID
#PUID=1000

# Group ID for volume permissions (default: 1000)
# Uncomment to match your host user GID
#PGID=1000

# ============================================================================
# OpenCode AI Service Configuration
# ============================================================================

# OpenCode container port (default: 4096)
OPENCODE_PORT=4096

# OpenCode host port (default: 4096)
OPENCODE_HOST_PORT=4096

# OpenCode web username (default: opencode)
OPENCODE_SERVER_USERNAME=opencode

# OpenCode web password (RECOMMENDED to set a strong password)
# Generate a secure password: openssl rand -base64 32
#OPENCODE_SERVER_PASSWORD=

# ============================================================================
# OpenClaw AI Service Configuration
# ============================================================================

# OpenClaw container port (default: 18789)
OPENCLAW_PORT=18789

# OpenClaw host port (default: 18789)
OPENCLAW_HOST_PORT=18789

# OpenClaw gateway token (RECOMMENDED to set a secure token)
# Generate a secure token: openssl rand -hex 32
#CLAW_GATEWAY_TOKEN=

# ============================================================================
# Log Configuration (Optional)
# ============================================================================

# Log retention period in days (default: 3)
#LOG_RETENTION_DAYS=3

# ============================================================================
# Volume Configuration (Optional)
# ============================================================================

# Uncomment in docker-compose.yml to persist data:
# volumes:
#   - /path/to/your/data:/home/vscodeuser
